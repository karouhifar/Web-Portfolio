<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact</title>
  <!-- ico in the URL address bar and on bookmarks created by web browsers -->
  <link rel="icon" type="image/png" href="img/Kamyab.jpg" />
  <!-- fontAwesome file -->
  <script src="https://kit.fontawesome.com/b0db9e868b.js" crossorigin="anonymous"></script>
  <!-- Bootstrap CSS file -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Custom CSS file -->
  <link rel="stylesheet" type="text/css" href="css/contact.css">
  <link rel="stylesheet" href="css/style-new.css" />
  <!-- GSAP animation -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.6.1/gsap.min.js"></script>

  {{!-- Animation JS Library --}}
  <script src="https://cdn.jsdelivr.net/npm/animejs@3.0.1/lib/anime.min.js"></script>

</head>

<body>
  <!-- START HEADER -->
  {{> header headerDATA}}
  <!-- END HEADER -->

  

  <div class="contact1">
    {{!-- <div class="spacer layer-top"></div> --}}
    <div class="container-contact1">
      <!-- start tilt animation SVG image -->
      <div class="contact1-pic js-tilt" data-tilt>
        <img src="img/phone-call-icon.svg" alt="svg">
      </div>
      <!-- end tilt animation SVG image -->

      <!-- start HTML Form -->
      <form class="contact1-form validate-form" method="POST" action="send" enctype="application/x-www-form-urlencoded">
        <span class="contact1-form-title">
          Get in touch
        </span>

        <div class="wrap-input1 validate-input" data-validate="Name is required">
          <input class="input1" type="text" name="name" placeholder="Your Name" id="name">
          <span class="shadow-input1"></span>
        </div>

        <div class="wrap-input1 validate-input" data-validate="Valid email is required: ex@abc.xyz">
          <input class="input1" type="text" name="email" placeholder="Your Email" id="email">
          <span class="shadow-input1"></span>
        </div>

        <div class="wrap-input1 validate-input" data-validate="Subject is required">
          <input class="input1" type="text" name="subject" placeholder="Your Subject" id="subject">
          <span class="shadow-input1"></span>
        </div>

        <div class="wrap-input1 validate-input" data-validate="Message is required">
          <textarea class="input1" name="message" placeholder="Your Message" id="message"></textarea>
          <span class="shadow-input1"></span>
        </div>

        <div class="container-contact1-form-btn">
          <button class="contact1-form-btn">
            <span>
              Send Email
              <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            </span>
          </button>
        </div>

      </form>
      <!-- end HTML Form -->
    </div>
    {{!-- <div class="spacer layer-bottom"></div> --}}
  </div>


     
  </div>
  <!-- START FOOTER AREA -->
  {{>footer}}
  <!-- END FOOTER AREA -->

  <!-- Bootstrap JS file -->
  <script src="js/jquery-3.6.0.min.js"></script>

  <script>
    const tl = gsap.timeline({ defaults: { duration: 1, stagger: 0.7 } });
    tl.from(".headerMain", { opacity: 0.1, x: -500 })
      .from(".container-contact1", { y: 500, opacity: 0.1 }, '-=1');
  </script>
  <script src="js/preLoad.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <!-- tilt effect for jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tilt.js/1.2.1/tilt.jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/CSSRulePlugin.min.js"
    integrity="sha512-1z2hYE5HWzZW8cAJRhlwT472AGZC3HlJyWYmW3SXG/Qh0S6TFdkYEqJaPwT7eCy9tI4KvwrRVK6IGqtqErpHQg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <!-- Custom JS file-->
  <script src="js/contact.js"></script>

  <!-- Custom JS file-->
  <script src="js/scrollHeader.js"></script>
</body>

</html>